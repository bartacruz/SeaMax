<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <path>rotax912-rpm.ac</path>
    <effect>
        <inherits-from>../../../Effects/Glass/glass</inherits-from>
        <object-name>rpm glass</object-name>
    </effect>
    <animation>
        <type>material</type>
        <object-name>rpm</object-name>
        <object-name>rpm needle</object-name>
        <condition>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <red> 0.07 </red>
            <green> 0.04 </green>
            <blue> 0.04 </blue>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
    </animation>

    <animation>
		<type>rotate</type>
		<object-name>rpm needle</object-name>
		<property>/engines/engine/rpm</property>
		<interpolation>
			<entry>
				<ind>   0 </ind>
				<dep>   0 </dep>
			</entry>
			<entry>
				<ind>  1000 </ind>
				<dep>  37.0 </dep>
			</entry>
			<entry>
				<ind>  2000 </ind>
				<dep>  75.2 </dep>
			</entry>
			<entry>
				<ind>  3000 </ind>
				<dep> 114.0 </dep>
			</entry>
			<entry>
				<ind>  4000 </ind>
				<dep> 153.5  </dep>
			</entry>
			<entry>
				<ind>  5000 </ind>
				<dep> 193.0  </dep>
			</entry>
			<entry>
				<ind>  6000 </ind>
				<dep> 232.5  </dep>
			</entry>
			<entry>
				<ind>  7000 </ind>
				<dep> 270.5 </dep>
			</entry>
		</interpolation>
		<axis>
			<x> -1 </x>
			<y>  0 </y>
			<z>  0 </z>
		</axis>
	</animation>
</PropertyList>