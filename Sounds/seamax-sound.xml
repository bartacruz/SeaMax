<?xml version="1.0" encoding="utf-8"?>

<PropertyList>

    <fx>
        <crank>
            <name>engstart</name>
            <path>Rotax912-Engstart.wav</path>
            <property>engines/engine[0]/cranking</property>
            <position>
                <x> 2.8 </x>
                <y> 0.000 </y>
                <z> 1.7</z>
            </position>
            <volume>
                <offset>0.5</offset>
            </volume>
            <reference-dist>100</reference-dist>
            <max-dist>1000</max-dist>
        </crank>

        <crank>
            <name>crank</name>
            <mode>looped</mode>
            <path>Rotax912-Cranking.wav</path>
            <condition>
                <property>engines/engine[0]/cranking</property>
                <not>
                    <property>engines/engine[0]/running</property>
                </not>
            </condition>
            <position>
                <x> 2.8 </x>
                <y> 0.000 </y>
                <z> 1.7 </z>
            </position>
            <volume>
                <offset>0.5</offset>
            </volume>
            <reference-dist>100</reference-dist>
            <max-dist>1000</max-dist>
        </crank>

        <crank>
            <name>cough</name>
            <path>Rotax912-Coughing.wav</path>
            <condition>
                <not>
                    <property>engines/engine[0]/running</property>
                </not>
                <or>
                    <greater-than>
                        <property>engines/engine[0]/rpm</property>
                        <value>1300</value>
                    </greater-than>
                    <and>
                        <greater-than>
                            <property>engines/engine[0]/rpm</property>
                            <value>600</value>
                        </greater-than>
                        <greater-than>
                            <property>engines/engine[0]/fuel-flow-gph</property>
                            <value>0.3</value>
                        </greater-than>
                    </and>
                </or>
            </condition>
            <position>
                <x> -2.162 </x>
                <y> 0.000 </y>
                <z> 0.689 </z>
            </position>
            <volume>
                <offset>0.5</offset>
            </volume>
            <reference-dist>100</reference-dist>
            <max-dist>1000</max-dist>
        </crank>

        <engine>
            <name>engine-external</name>
            <mode>looped</mode>
            <path>Rotax912-Engine.wav</path>
            <position>
                <x>2.8</x>
                <y>0</y>
                <z>1.7</z>
            </position>
            <condition>
                <property>engines/engine[0]/running</property>
                <or>
                    <not>
                        <property>/sim/current-view/internal</property>

                    </not>
                    <greater-than>
                        <property>sim/model/door-positions/canopy/position-norm</property>
                        <value>0</value>
                    </greater-than>
                </or>
            </condition>
            <volume>
                <property>engines/engine[0]/mp-osi</property>
                <factor>0.018</factor>
                <min>0.35</min>
                <max>2</max>
                <offset>0.35</offset>
            </volume>
            <pitch>
                <property>engines/engine[0]/rpm</property>
                <factor>0.00025</factor>
                <min>0.3</min>
                <max>2.0</max>
                <offset>0.3</offset>
            </pitch>
        </engine>

        <engine>
            <name>engine-internal-1</name>
            <mode>looped</mode>
            <path>Rotax912-Engine-Internal.wav</path>
            <condition>
                <and>
                    <property>engines/engine[0]/running</property>
                    <property>/sim/current-view/internal</property>
                    <equals>
                        <property>sim/model/door-positions/canopy/position-norm</property>
                        <value>0</value>
                    </equals>
                </and>
            </condition>
            <position>
                <x>2.8</x>
                <y>0</y>
                <z>1.7</z>
            </position>
            <volume>
                <property>engines/engine[0]/mp-osi</property>
                <factor>0.012</factor>
                <min>0.4</min>
                <max>1.5</max>
                <offset>0.4</offset>
            </volume>
            <pitch>
                <property>engines/engine[0]/rpm</property>
                <factor>0.0003</factor>
                <min>0.3</min>
                <max>4.5</max>
                <offset>0.1</offset>
            </pitch>
        </engine>

        <wind>
            <name>wind</name>
            <mode>looped</mode>
            <path>Rotax912-Wind.wav</path>
            <condition>
                <and>
                    <property>velocities/airspeed-kt</property>
                    <or>
                        <greater-than>
                            <property>sim/model/door-positions/canopy/position-norm</property>
                            <value>0</value>
                        </greater-than>
                        <not>
                            <property>sim/current-view/internal</property>
                        </not>
                    </or>
                </and>
            </condition>
            <volume>
                <property>position/altitude-ft</property>
                <factor>-0.000015</factor>
                <offset>1.0</offset>
                <min>0.1</min>
                <max>1.0</max>
            </volume>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0025</factor>
                <min>0.03</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
                <offset>1.25</offset>
            </pitch>
            <reference-dist>100</reference-dist>
            <max-dist>1000</max-dist>
        </wind>

        <flap>
            <name>flaps</name>
            <mode>in-transit</mode>
            <path>Cessna150Flaps.wav</path>
            <property>surface-positions/flap-pos-norm</property>
            <volume>
                <factor>0.8</factor>
            </volume>
            <reference-dist>10.0</reference-dist>
            <max-dist>120.0</max-dist>
        </flap>
        <gear>
            <name>gear</name>
            <mode>in-transit</mode>
            <path>electric_engine.wav</path>
            <condition>
                <not>
                    <property>/controls/gear/detecting</property>
                </not>
            </condition>
            <property>gear/gear[0]/position-norm</property>
            <pitch>
                <internal>dt_play</internal>
                <offset>1.0</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>2.5</x>
                <y>0</y>
                <z>0.5</z>
            </position>
            <volume>
                <factor>0.2</factor>
            </volume>
            <reference-dist>5.0</reference-dist>
            <max-dist>10.0</max-dist>
        </gear>
        <gear-lever>
            <name>gear-lever</name>
            <mode>in-transit</mode>
            <path>DoorOpen.wav</path>
            <condition>
                <not>
                    <property>/controls/gear/detecting</property>
                </not>
            </condition>
            <property>controls/gear/gear-lever-norm</property>
            <pitch>
                <internal>dt_play</internal>
                <offset>1.0</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>1.</x>
                <y>0</y>
                <z>0.5</z>
            </position>
            <volume>
                <factor>0.9</factor>
            </volume>
            <reference-dist>5.0</reference-dist>
            <max-dist>10.0</max-dist>
        </gear-lever>

        <water-rudder>
            <name>water-rudder</name>
            <mode>once</mode>
            <path>DoorOpen.wav</path>
            <condition>
                <not>
                    <property>controls/gear/water-rudder</property>
                </not>
            </condition>
            <pitch>
                <internal>dt_play</internal>
                <offset>1.0</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>1.93</x>
                <y>0.44</y>
                <z>0.5</z>
            </position>
            <volume>
                <factor>0.9</factor>
            </volume>
            <reference-dist>5.0</reference-dist>
            <max-dist>10.0</max-dist>
        </water-rudder>

        <water-rudder>
            <name>water-rudder-off</name>
            <mode>once</mode>
            <path>DoorClosed.wav</path>
            <condition>
                <property>controls/gear/water-rudder</property>
            </condition>
            <pitch>
                <internal>dt_play</internal>
                <offset>1.0</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>1.93</x>
                <y>0.44</y>
                <z>0.5</z>
            </position>
            <volume>
                <factor>0.9</factor>
            </volume>
            <reference-dist>5.0</reference-dist>
            <max-dist>10.0</max-dist>
        </water-rudder>

        <canopy>
            <name>canopy</name>
            <mode>in-transit</mode>
            <path>pneumatic-door.wav</path>
            <property>sim/model/door-positions/canopy/position-norm</property>
            <pitch>
                <internal>dt_play</internal>
                <offset>1.0</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>1.5</x>
                <y>0</y>
                <z>1</z>
            </position>
            <volume>
                <factor>0.7</factor>
            </volume>
            <reference-dist>5.0</reference-dist>
            <max-dist>30.0</max-dist>
        </canopy>

        <pavement-roll>
            <name>pavement-roll</name>
            <mode>looped</mode>
            <path>tires-rolling-asphalt.wav</path>
            <condition>
                <and>
                    <property>/fdm/jsbsim/gear/on-pavement</property>
                    <or>
                        <property>gear/gear[0]/wow</property>
                        <property>gear/gear[1]/wow</property>
                        <property>gear/gear[2]/wow</property>
                    </or>
                    <or>
                        <greater-than>
                            <property>/gear/gear[0]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[1]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[2]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <position>
                <x>2.3</x>
                <y>0.0</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </pavement-roll>

        <splash>
            <name>splash</name>
            <mode>looped</mode>
            <path>water-fast.wav</path>
            <condition>
                <and>
                    <property>/fdm/jsbsim/contact/unit[3]/WOW</property>
                    <not>
                        <property>/fdm/jsbsim/contact/unit[3]/solid</property>
                    </not>
                    <greater-than>
                        <property>/velocities/groundspeed-kt</property>
                        <value>20</value>
                    </greater-than>
                </and>
            </condition>
            <position>
                <x>1.5</x>
                <y>0.0</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </splash>
        <splash>
            <name>splash left</name>
            <mode>looped</mode>
            <path>water-fast.wav</path>
            <condition>
                <and>
                    <property>/fdm/jsbsim/contact/unit[4]/WOW</property>
                    <not>
                        <property>/fdm/jsbsim/contact/unit[4]/solid</property>
                    </not>
                    <greater-than>
                        <property>/velocities/groundspeed-kt</property>
                        <value>20</value>
                    </greater-than>
                </and>
            </condition>
            <position>
                <x>1.5</x>
                <y>-0.7</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </splash>
        <splash>
            <name>splash right</name>
            <mode>looped</mode>
            <path>water-fast.wav</path>
            <condition>
                <and>
                    <property>/fdm/jsbsim/contact/unit[5]/WOW</property>
                    <not>
                        <property>/fdm/jsbsim/contact/unit[5]/solid</property>
                    </not>
                    <greater-than>
                        <property>/velocities/groundspeed-kt</property>
                        <value>20</value>
                    </greater-than>
                </and>
            </condition>
            <position>
                <x>1.5</x>
                <y>0.7</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </splash>
        <gravel-roll>
            <name>gravel-roll</name>
            <mode>looped</mode>
            <path>tires-rolling-gravel.wav</path>
            <condition>
                <and>
                    <not>
                        <property>/fdm/jsbsim/gear/on-pavement</property>
                    </not>
                    <or>
                        <property>gear/gear[0]/wow</property>
                        <property>gear/gear[1]/wow</property>
                        <property>gear/gear[2]/wow</property>
                    </or>
                    <or>
                        <greater-than>
                            <property>/gear/gear[0]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[1]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[2]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <position>
                <x>2.5</x>
                <y>0.0</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </gravel-roll>

        <!-- Toggle Switches -->
        <switch>
            <name>Left fuel on</name>
            <path>Sounds/switch3_on.wav</path>
            <mode>once</mode>
            <condition>
                <property>/controls/fuel/tank/fuel_selector</property>
            </condition>
            <position>
                <x> 2.0368</x>
                <y>-0.40216</y>
                <z> 1.2298</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </switch>
        <switch>
            <name>Left fuel Off</name>
            <path>Sounds/switch3_off.wav</path>
            <mode>once</mode>
            <condition>
                <not>
                    <property>/controls/fuel/tank/fuel_selector</property>
                </not>
            </condition>
            <position>
                <x> 2.0368</x>
                <y>-0.40216</y>
                <z> 1.2298</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </switch>

        <switch>
            <name>Right fuel on</name>
            <path>Sounds/switch3_on.wav</path>
            <mode>once</mode>
            <condition>
                <property>/controls/fuel/tank[1]/fuel_selector</property>
            </condition>
            <position>
                <x> 2.0368</x>
                <y> 0.40216</y>
                <z> 1.2298</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </switch>
        <switch>
            <name>Right fuel Off</name>
            <path>Sounds/switch3_off.wav</path>
            <mode>once</mode>
            <condition>
                <not>
                    <property>/controls/fuel/tank[1]/fuel_selector</property>
                </not>
            </condition>
            <position>
                <x> 2.0368</x>
                <y> 0.40216</y>
                <z> 1.2298</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </switch>

        <switch>
            <name>Overhead panel switches</name>
            <path>Sounds/switch2.wav</path>
            <mode>once</mode>
            <condition>
                <property>sim/model/click-overhead</property>
            </condition>
            <position>
                <x> 1.7</x>
                <y> 0</y>
                <z> 1.28</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </switch>
        <switch>
            <name>Overhead panel switches off</name>
            <path>Sounds/switch2.wav</path>
            <mode>once</mode>
            <condition>
                <not>
                    <property>sim/model/click-overhead</property>
                </not>
            </condition>
            <position>
                <x> 1.7</x>
                <y> 0</y>
                <z> 1.28</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </switch>
    </fx>
</PropertyList>