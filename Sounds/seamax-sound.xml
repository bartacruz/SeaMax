<?xml version="1.0" encoding="utf-8"?>

<PropertyList>

    <fx>
        <crank>
            <name>engstart</name>
            <path>Rotax912-Engstart.wav</path>
            <property>engines/engine[0]/cranking</property>
            <position>
                <x> 2.8 </x>
                <y>  0.000 </y>
                <z>  1.7</z>
            </position>
            <volume>
                <offset>0.5</offset>
            </volume>
            <reference-dist>100</reference-dist>
            <max-dist>1000</max-dist>
        </crank>

        <crank>
            <name>crank</name>
            <mode>looped</mode>
            <path>Rotax912-Cranking.wav</path>
            <condition>
                <property>engines/engine[0]/cranking</property>
                <not>
                    <property>engines/engine[0]/running</property>
                </not>
            </condition>
            <position>
                <x>  2.8 </x>
                <y>  0.000 </y>
                <z>  1.7 </z>
            </position>
            <volume>
                <offset>0.5</offset>
            </volume>
            <reference-dist>100</reference-dist>
            <max-dist>1000</max-dist>
        </crank>

        <engine>
            <name>engine-external</name>
            <mode>looped</mode>
            <path>Rotax912-Engine.wav</path>
            <position>
                <x>2.8</x>
                <y>0</y>
                <z>1.7</z>
            </position>
            <condition>
                <property>engines/engine[0]/running</property>
                <not>
                    <property>/sim/current-view/internal</property>
                </not>
            </condition>
            <volume>
                <property>engines/engine[0]/mp-osi</property>
                <factor>0.018</factor>
                <min>0.35</min>
                <max>2</max>
                <offset>0.35</offset>
            </volume>
            <pitch>
                <property>engines/engine[0]/rpm</property>
                <factor>0.00025</factor>
                <min>0.3</min>
                <max>2.0</max>
                <offset>0.3</offset>
            </pitch>
        </engine>

        <engine>
            <name>engine-internal-1</name>
            <mode>looped</mode>
            <path>Rotax912-Engine-Internal.wav</path>
            <condition>
                <and>
                    <property>engines/engine[0]/running</property>
                    <property>/sim/current-view/internal</property>
                </and>
            </condition>
            <position>
                <x>2.8</x>
                <y>0</y>
                <z>1.7</z>
            </position>
            <volume>
                <property>engines/engine[0]/mp-osi</property>
                <factor>0.012</factor>
                <min>0.4</min>
                <max>1.5</max>
                <offset>0.4</offset>
            </volume>
            <pitch>
                <property>engines/engine[0]/rpm</property>
                <factor>0.0003</factor>
                <min>0.3</min>
                <max>4.5</max>
                <offset>0.1</offset>
            </pitch>
        </engine>
        <flap>
            <name>flaps</name>
            <mode>in-transit</mode>
            <path>Cessna150Flaps.wav</path>
            <property>surface-positions/flap-pos-norm</property>
            <volume>
                <factor>0.8</factor>
            </volume>
            <reference-dist>10.0</reference-dist>
            <max-dist>120.0</max-dist>
        </flap>
        <gear>
            <name>gear</name>
            <mode>in-transit</mode>
            <path>electric_engine.wav</path>
            <property>gear/gear[0]/position-norm</property>
            <pitch>
                <internal>dt_play</internal>
                <offset>1.0</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>2.5</x>
                <y>0</y>
                <z>0.5</z>
            </position>
            <volume>
                <factor>0.2</factor>
            </volume>
            <reference-dist>5.0</reference-dist>
            <max-dist>10.0</max-dist>
        </gear>
        
        <canopy>
            <name>canopy</name>
            <mode>in-transit</mode>
            <path>pneumatic-door.wav</path>
            <property>sim/model/door-positions/canopy/position-norm</property>
            <pitch>
                <internal>dt_play</internal>
                <offset>1.0</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>1.5</x>
                <y>0</y>
                <z>1</z>
            </position>
            <volume>
                <factor>0.7</factor>
            </volume>
            <reference-dist>5.0</reference-dist>
            <max-dist>30.0</max-dist>
        </canopy>

        <pavement-roll>
            <name>pavement-roll</name>
            <mode>looped</mode>
            <path>tires-rolling-asphalt.wav</path>
            <condition>
                <and>
                    <property>/fdm/jsbsim/gear/on-pavement</property>
                    <or>
                        <property>gear/gear[0]/wow</property>
                        <property>gear/gear[1]/wow</property>
                        <property>gear/gear[2]/wow</property>
                    </or>
                    <or>
                        <greater-than>
                            <property>/gear/gear[0]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[1]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[2]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <position>
                <x>2.3</x>
                <y>0.0</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </pavement-roll>

        <splash>
            <name>splash</name>
            <mode>looped</mode>
            <path>water-fast.wav</path>
            <condition>
                <and>
                    <property>/fdm/jsbsim/contact/unit[3]/WOW</property>
                    <not>
                        <property>/fdm/jsbsim/contact/unit[3]/solid</property>
                    </not>
                    <greater-than>
                        <property>/velocities/groundspeed-kt</property>
                        <value>20</value>
                    </greater-than>
                </and>
            </condition>
            <position>
                <x>1.5</x>
                <y>0.0</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </splash>
        <splash>
            <name>splash left</name>
            <mode>looped</mode>
            <path>water-fast.wav</path>
            <condition>
                <and>
                    <property>/fdm/jsbsim/contact/unit[4]/WOW</property>
                    <not>
                        <property>/fdm/jsbsim/contact/unit[4]/solid</property>
                    </not>
                    <greater-than>
                        <property>/velocities/groundspeed-kt</property>
                        <value>20</value>
                    </greater-than>
                </and>
            </condition>
            <position>
                <x>1.5</x>
                <y>-0.7</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </splash>
        <splash>
            <name>splash right</name>
            <mode>looped</mode>
            <path>water-fast.wav</path>
            <condition>
                <and>
                    <property>/fdm/jsbsim/contact/unit[5]/WOW</property>
                    <not>
                        <property>/fdm/jsbsim/contact/unit[5]/solid</property>
                    </not>
                    <greater-than>
                        <property>/velocities/groundspeed-kt</property>
                        <value>20</value>
                    </greater-than>
                </and>
            </condition>
            <position>
                <x>1.5</x>
                <y>0.7</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </splash>
        <gravel-roll>
            <name>gravel-roll</name>
            <mode>looped</mode>
            <path>tires-rolling-gravel.wav</path>
            <condition>
                <and>
                    <not>
                        <property>/fdm/jsbsim/gear/on-pavement</property>
                    </not>
                    <or>
                        <property>gear/gear[0]/wow</property>
                        <property>gear/gear[1]/wow</property>
                        <property>gear/gear[2]/wow</property>
                    </or>
                    <or>
                        <greater-than>
                            <property>/gear/gear[0]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[1]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                        <greater-than>
                            <property>/gear/gear[2]/rollspeed-ms</property>
                            <value>5</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <position>
                <x>2.5</x>
                <y>0.0</y>
                <z>0.2</z>
            </position>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <!-- <volume>
                <property>/sim/model/c172p/sound/volume-boost-doors</property>
            </volume> -->
            <reference-dist>2.5</reference-dist>
            <max-dist>200.0</max-dist>
        </gravel-roll>

    </fx>
</PropertyList>